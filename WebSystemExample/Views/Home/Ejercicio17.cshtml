@{
    ViewData["Title"] = "Ejercicio 17";
}

<h1>Calculadora de Sueldo Neto</h1>

<div class="main-wrapper">
    <div class="card card-body card-container">
        <form id="formSueldo" novalidate>
            <div class="mb-3 text-start">
                <label for="sueldoBaseInput" class="form-label">Sueldo Base (S/)</label>
                <input type="number" id="sueldoBaseInput" class="form-control" placeholder="Ej: 2500" />
            </div>

            <div class="mb-3 text-start">
                <label for="horasExtrasInput" class="form-label">Horas Extras Realizadas</label>
                <input type="number" id="horasExtrasInput" class="form-control" placeholder="Cantidad de horas" />
            </div>

            <div class="mb-3 text-start">
                <label for="otrosDescuentosInput" class="form-label">Otros Descuentos (S/)</label>
                <input type="number" id="otrosDescuentosInput" class="form-control" placeholder="Ej: Préstamos, multas" />
            </div>

            <button type="button" id="btnCalcularSueldo" class="btn btn-primary w-100">Calcular Sueldo Neto</button>
        </form>

        <div id="resultadoSueldo" class="mt-3" aria-live="polite"></div>
    </div>
</div>

@section Scripts {
    <script src="~/js/ejercicio17.js" asp-append-version="true"></script>
}