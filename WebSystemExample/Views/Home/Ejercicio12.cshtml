@{
    ViewData["Title"] = "Ejercicio12";
}

<h1>Simulador de Becas Educativas</h1>

<div class="main-wrapper">
    <div class="card card-body card-container">

        <div class="mb-3 text-start">
            <label class="form-label">Nombre del estudiante</label>
            <input type="text" id="nombreInput" class="form-control" />
        </div>

        <div class="mb-3 text-start">
            <label class="form-label">Promedio académico</label>
            <input type="number" id="promedioInput" class="form-control" min="0" max="20" step="0.01" />
        </div>

        <div class="mb-3 text-start">
            <label class="form-label">Ingresos familiares (S/)</label>
            <input type="number" id="ingresosInput" class="form-control" min="0" />
        </div>

        <button type="button" id="btnEvaluar" class="btn btn-primary w-100">
            Evaluar beca
        </button>

        <div id="resultadoBeca" class="mt-3"></div>

    </div>
</div>

@section Scripts {
    <script src="~/js/ejercicio12.js" asp-append-version="true"></script>
}
