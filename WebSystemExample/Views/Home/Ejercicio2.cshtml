
@{
    ViewData["Title"] = "Ejercicio2";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/estiloejercicio2.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/ejercicio2.js" asp-append-version="true"></script>
}

<div class="main-wrapper">
    <div class="card-container">
        <form id="formAgregarProductos" novalidate>
            <h2>Registro de Productos</h2>
            <div class="mb-3 text-start">
                <label for="nombreInput" class="form-label">Ingrese el nombre del producto</label>
                <input type="text" class="form-control" id="nombreInput" placeholder="Nombre del producto">
            </div>
            <div class="mb-3 text-start">
                <label for="precioInput" class="form-label">Ingrese el precio del producto</label>
                <input type="number" class="form-control" id="precioInput" placeholder="Precio del producto">
            </div>
            <div class="mb-3 text-start">
                <label for="cantidadInput" class="form-label">Ingrese la cantidad del producto</label>
                <input type="number" class="form-control" id="cantidadInput" placeholder="Escriba la cantidad">
            </div>
            <div>
                <button type="submit" id="btnAgregarProducto" class="btn btn-primary w-100">Agregar Producto</button>
            </div>
        </form>
    </div>

    <div>
        <table id="tablaPedido" class="table">

            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Precio Unitario</th>
                    <th>Cantidad</th>
                    <th>Subtotal</th>
                    <th>Accion</th>
                </tr>
            </thead>

            <tbody>
                <!-- Filas de productos se agregarán aquí dinámicamente -->
            </tbody>

        </table>

        <div id="resultados" class="mt-3">

        </div>
    </div>

</div>

