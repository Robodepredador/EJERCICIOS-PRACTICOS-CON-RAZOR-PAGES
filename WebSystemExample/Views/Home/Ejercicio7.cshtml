@{
    ViewData["Title"] = "Ejercicio7";
}

<h1>Historial de Síntomas</h1>

<div class="main-wrapper">
    <div class="card card-body card-container">

        <div class="mb-3 text-start">
            <label class="form-label">Síntoma</label>
            <input type="text" id="sintomaInput" class="form-control" placeholder="Ej. Dolor de cabeza" />
        </div>

        <div class="mb-3 text-start">
            <label class="form-label">Fecha</label>
            <input type="date" id="fechaInput" class="form-control" />
        </div>

        <button type="button" id="btnAgregar" class="btn btn-primary w-100">
            Agregar síntoma
        </button>

        <hr />

        <h5>Historial</h5>
        <ul id="listaHistorial" class="list-group"></ul>

        <div id="resultadoSintomas" class="mt-3"></div>

    </div>
</div>

@section Scripts {
    <script src="~/js/ejercicio7.js" asp-append-version="true"></script>
}
