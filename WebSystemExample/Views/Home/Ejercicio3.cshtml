@{
    ViewData["Title"] = "Ejercicio3";
}

<h1>Cotizador automático</h1>

<div class="main-wrapper">
    <div class="card card-body card-container">
        <form id="formCotizador" novalidate>
            <div class="mb-3 text-start">
                <label for="productoInput" class="form-label">Selecciona el producto</label>
                <select class="form-select" id="productoInput" aria-label="Seleccione producto">
                    <option value="" disabled selected>-- Seleccione un producto --</option>
                    <option value="Producto A">Laptop Gamer S/2500.00</option>
                    <option value="Producto B">Teclado mecánico S/80.00</option>
                    <option value="Producto C">Mouse Gamer S/45.00</option>
                </select>
            </div>

            <div class="mb-3 text-start">
                <label for="cantidadInput" class="form-label">Ingresa la cantidad</label>
                <input type="number" id="cantidadInput" class="form-control" min="1" placeholder="Cantidad" />
            </div>

            <div class="mb-3 text-start">
                <label for="nivelUrgenciaInput" class="form-label">Selecciona el nivel de urgencia</label>
                <select class="form-select" id="nivelUrgenciaInput" aria-label="Seleccione urgencia">
                    <option value="" disabled selected>-- Seleccione nivel de urgencia --</option>
                    <option value="Normal">Normal (0% recargo)</option>
                    <option value="Urgente">Urgente (10% recargo)</option>
                    <option value="Muy Urgente">Muy Urgente (20% recargo)</option>
                </select>
            </div>

            <button type="button" id="btnCotizar" class="btn btn-primary w-100">Cotizar</button>
        </form>

        <div id="resultadoCotizacion" class="mt-3" aria-live="polite"></div>
    </div>
</div>

@section Scripts {
    <script src="~/js/ejercicio3.js" asp-append-version="true"></script>
}


