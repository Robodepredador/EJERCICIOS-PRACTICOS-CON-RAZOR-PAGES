@{
    ViewData["Title"] = "Ejercicio 18";
}

<h1>Solicitud de Vacaciones</h1>

<div class="main-wrapper">
    <div class="card card-body card-container">
        <form id="formVacaciones" novalidate>
            <div class="row">
                <div class="col-md-6 mb-3 text-start">
                    <label for="fechaInicio" class="form-label">Fecha de Inicio</label>
                    <input type="date" id="fechaInicio" class="form-control" />
                </div>
                <div class="col-md-6 mb-3 text-start">
                    <label for="fechaFin" class="form-label">Fecha de Fin</label>
                    <input type="date" id="fechaFin" class="form-control" />
                </div>
            </div>

            <div class="mb-3 text-start">
                <label for="tipoContrato" class="form-label">Tipo de Contrato</label>
                <select class="form-select" id="tipoContrato">
                    <option value="" disabled selected>-- Seleccione contrato --</option>
                    <option value="Completo">Tiempo Completo</option>
                    <option value="Parcial">Medio Tiempo</option>
                </select>
            </div>

            <div class="mb-3 text-start">
                <label for="antiguedad" class="form-label">Antigüedad (Años)</label>
                <input type="number" id="antiguedad" class="form-control" min="0" placeholder="Ej: 2" />
            </div>

            <button type="button" id="btnSolicitar" class="btn btn-primary w-100">Validar Solicitud</button>
        </form>

        <div id="resultadoVacaciones" class="mt-3" aria-live="polite"></div>
    </div>
</div>

@section Scripts {
    <script src="~/js/ejercicio18.js" asp-append-version="true"></script>
}