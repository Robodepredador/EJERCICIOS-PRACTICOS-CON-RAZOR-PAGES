@{
    ViewData["Title"] = "Ejercicio8";
}

<h1>Presupuesto de Tratamientos Médicos</h1>

<div class="main-wrapper">
    <div class="card card-body card-container">

        <div class="mb-3 text-start">
            <label class="form-label">Tratamiento</label>
            <select id="tratamientoInput" class="form-select">
                <option value="" disabled selected>-- Seleccione --</option>
                <option value="Fisioterapia">Fisioterapia (S/ 120 por sesión)</option>
                <option value="Odontología">Odontología (S/ 200 por sesión)</option>
                <option value="Psicología">Psicología (S/ 150 por sesión)</option>
            </select>
        </div>

        <div class="mb-3 text-start">
            <label class="form-label">Cantidad de sesiones</label>
            <input type="number" id="sesionesInput" class="form-control" min="1" placeholder="Ingrese cantidad" />
        </div>

        <div class="mb-3 text-start">
            <label class="form-label">Plan médico</label>
            <select id="planInput" class="form-select">
                <option value="" disabled selected>-- Seleccione --</option>
                <option value="Ninguno">Sin plan</option>
                <option value="Prepaga X">Prepaga X (20% descuento)</option>
                <option value="Prepaga Y">Prepaga Y (10% descuento)</option>
            </select>
        </div>

        <button type="button" id="btnCalcular" class="btn btn-primary w-100">
            Calcular presupuesto
        </button>

        <div id="resultadoPresupuesto" class="mt-3"></div>

    </div>
</div>

@section Scripts {
    <script src="~/js/ejercicio8.js" asp-append-version="true"></script>
}
