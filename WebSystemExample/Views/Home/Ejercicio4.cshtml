@{
    ViewData["Title"] = "Ejercicio4";
}

<h1>Gestor de Stock</h1>

<div class="main-wrapper">
    <div class="card card-body card-container">

        <div class="mb-3 text-start">
            <label class="form-label">Stock actual</label>
            <input type="text" id="stockActual" class="form-control" disabled />
        </div>

        <div class="mb-3 text-start">
            <label for="cantidadInput" class="form-label">Cantidad</label>
            <input type="number" id="cantidadInput" class="form-control" min="1" placeholder="Ingrese cantidad" />
        </div>

        <div class="mb-3 text-start">
            <label for="tipoMovimiento" class="form-label">Tipo de movimiento</label>
            <select class="form-select" id="tipoMovimiento">
                <option value="" selected disabled>-- Seleccione --</option>
                <option value="entrada">Entrada</option>
                <option value="salida">Salida</option>
            </select>
        </div>

        <button type="button" id="btnActualizar" class="btn btn-primary w-100">
            Actualizar stock
        </button>

        <div id="resultadoStock" class="mt-3"></div>

    </div>
</div>

@section Scripts {
    <script src="~/js/ejercicio4.js" asp-append-version="true"></script>
}
