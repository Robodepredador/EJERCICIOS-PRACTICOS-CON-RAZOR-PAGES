@{
    ViewData["Title"] = "Ejercicio 14";
}

<h1>Simulador de Tarifas de Envío</h1>

<div class="main-wrapper">
    <div class="card card-body card-container">
        <form id="formEnvio" novalidate>
            <div class="mb-3 text-start">
                <label for="pesoInput" class="form-label">Peso del paquete (kg)</label>
                <input type="number" id="pesoInput" class="form-control" min="0.1" step="0.1" placeholder="Ejemplo: 2.5" />
            </div>

            <div class="mb-3 text-start">
                <label for="origenInput" class="form-label">Ciudad de Origen</label>
                <select class="form-select" id="origenInput">
                    <option value="" disabled selected>-- Seleccione origen --</option>
                    <option value="Lima">Lima</option>
                    <option value="Arequipa">Arequipa</option>
                    <option value="Trujillo">Trujillo</option>
                </select>
            </div>

            <div class="mb-3 text-start">
                <label for="destinoInput" class="form-label">Ciudad de Destino</label>
                <select class="form-select" id="destinoInput">
                    <option value="" disabled selected>-- Seleccione destino --</option>
                    <option value="Lima">Lima</option>
                    <option value="Arequipa">Arequipa</option>
                    <option value="Trujillo">Trujillo</option>
                </select>
            </div>

            <button type="button" id="btnCalcular" class="btn btn-primary w-100">Calcular Tarifa</button>
        </form>

        <div id="resultadoEnvio" class="mt-3" aria-live="polite"></div>
    </div>
</div>

@section Scripts {
    <script src="~/js/ejercicio14.js" asp-append-version="true"></script>
}