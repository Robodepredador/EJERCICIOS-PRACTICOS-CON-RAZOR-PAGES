@{
    ViewData["Title"] = "Ejercicio 19";
}

<h1>Simulador de Créditos (Sistema Francés)</h1>

<div class="main-wrapper">
    <div class="card card-body card-container">
        <form id="formCredito" novalidate>
            <div class="mb-3 text-start">
                <label for="montoInput" class="form-label">Monto del Préstamo (S/)</label>
                <input type="number" id="montoInput" class="form-control" placeholder="Ej: 5000" />
            </div>

            <div class="mb-3 text-start">
                <label for="tasaInput" class="form-label">Tasa Efectiva Anual - TEA (%)</label>
                <input type="number" id="tasaInput" class="form-control" placeholder="Ej: 15" step="0.1" />
            </div>

            <div class="mb-3 text-start">
                <label for="cuotasInput" class="form-label">Número de Cuotas (Meses)</label>
                <input type="number" id="cuotasInput" class="form-control" placeholder="Ej: 12" />
            </div>

            <button type="button" id="btnCalcularCredito" class="btn btn-primary w-100">Calcular Cuota</button>
        </form>

        <div id="resultadoCredito" class="mt-3" aria-live="polite"></div>
    </div>
</div>

@section Scripts {
    <script src="~/js/ejercicio19.js" asp-append-version="true"></script>
}