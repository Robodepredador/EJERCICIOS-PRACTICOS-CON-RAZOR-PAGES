@{
    ViewData["Title"] = "Ejercicio6";
}

<h1>Calculadora de IMC</h1>

<div class="main-wrapper">
    <div class="card card-body card-container">

        <div class="mb-3 text-start">
            <label class="form-label">Peso (kg)</label>
            <input type="number" id="pesoInput" class="form-control" min="1" step="0.1" placeholder="Ejemplo: 70" />
        </div>

        <div class="mb-3 text-start">
            <label class="form-label">Altura (m)</label>
            <input type="number" id="alturaInput" class="form-control" min="0.5" step="0.01" placeholder="Ejemplo: 1.70" />
        </div>

        <button type="button" id="btnCalcular" class="btn btn-primary w-100">
            Calcular IMC
        </button>

        <div id="resultadoIMC" class="mt-3"></div>

    </div>
</div>

@section Scripts {
    <script src="~/js/ejercicio6.js" asp-append-version="true"></script>
}
