@{
    ViewData["Title"] = "Ejercicio9";
}

<h1>Formulario de Inscripción</h1>

<div class="main-wrapper">
    <div class="card card-body card-container">

        <div class="mb-3 text-start">
            <label class="form-label">Nombre completo</label>
            <input type="text" id="nombreInput" class="form-control" />
        </div>

        <div class="mb-3 text-start">
            <label class="form-label">Carrera</label>
            <select id="carreraInput" class="form-select">
                <option value="" disabled selected>-- Seleccione --</option>
                <option value="Sistemas">Ingeniería de Sistemas</option>
                <option value="Administración">Administración</option>
                <option value="Contabilidad">Contabilidad</option>
            </select>
        </div>

        <div class="mb-3 text-start">
            <label class="form-label">Turno</label>
            <select id="turnoInput" class="form-select">
                <option value="" disabled selected>-- Seleccione --</option>
                <option value="Mañana">Mañana</option>
                <option value="Tarde">Tarde</option>
                <option value="Noche">Noche</option>
            </select>
        </div>

        <div class="mb-3 text-start">
            <label class="form-label">Correo</label>
            <input type="email" id="correoInput" class="form-control" />
        </div>

        <button type="button" id="btnInscribir" class="btn btn-primary w-100">
            Inscribirse
        </button>

        <div id="resultadoInscripcion" class="mt-3"></div>

    </div>
</div>

@section Scripts {
    <script src="~/js/ejercicio9.js" asp-append-version="true"></script>
}
